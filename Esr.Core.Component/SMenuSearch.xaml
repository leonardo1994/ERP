<UserControl x:Class="Esr.Core.Component.SMenuSearch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" Height="151.822" Width="396" Background="White">
    <Ribbon Background="White" x:Name="Ribbon">
        <Ribbon.ApplicationMenu>
            <RibbonApplicationMenu Visibility="Collapsed"></RibbonApplicationMenu>
        </Ribbon.ApplicationMenu>
        <RibbonTab Header="Opções" Background="White">
            <RibbonGroup Header="Pesquisar" KeyTip="Alt">
                <RibbonButton x:Name="MenuButtonSearch" LargeImageSource="Resources/icon_search_40.png" Label="Pesquisar" Click="MenuButtonSearch_OnClick"></RibbonButton>
            </RibbonGroup>
        </RibbonTab>
    </Ribbon>
</UserControl>
